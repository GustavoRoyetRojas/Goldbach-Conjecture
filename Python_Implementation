import time
import random
import sys
from concurrent.futures import ThreadPoolExecutor


def miller_rabin(n, k=20):
    """Miller-Rabin primality test with k rounds."""
    if n < 2:
        return False
    if n == 2 or n == 3:
        return True
    if n % 2 == 0:
        return False

    d = n - 1
    s = 0
    while d % 2 == 0:
        d //= 2
        s += 1

    for _ in range(k):
        a = random.randrange(2, min(n - 2, sys.maxsize))
        x = pow(a, d, n)
        if x == 1 or x == n - 1:
            continue
        for _ in range(s - 1):
            x = (x * x) % n
            if x == n - 1:
                break
        else:
            return False
    return True


def encontrar_pq_optimo(M, timeout=5):
    """Find primes P and Q such that P + Q = M with timeout."""
    if M % 2 != 0 or M <= 2:
        raise ValueError("M must be even and greater than 2")

    mid = M // 2
    start_time = time.time()

    def find_prime_pair():
        # Start with odd numbers around mid
        offset = 1 if mid % 2 == 0 else 0
        while time.time() - start_time < timeout:
            p = mid - offset
            if p < 2:
                return None
            if miller_rabin(p):
                q = M - p
                if q > p and miller_rabin(q):  # Ensure q > p to avoid duplicates
                    return (p, q)
            # Try the other direction
            p = mid + offset
            if p < M and miller_rabin(p):
                q = M - p
                if q > 0 and miller_rabin(q):
                    return (q, p)  # Return smaller number first
            offset += 2
        return None

    with ThreadPoolExecutor(max_workers=1) as executor:  # Single thread since we're doing paired search
        future = executor.submit(find_prime_pair)
        result = future.result()

    return result


# Test cases
M = 4 * 10 ** 30  # Astronomical number
print(f"Procesando M = {M:,}")

start_time = time.time()
resultado = encontrar_pq_optimo(M, timeout=5)
end_time = time.time()

if resultado:
    print(f"Encontrado: P = {resultado[0]:,}, Q = {resultado[1]:,}")
    print(f"Verificación: {resultado[0]} + {resultado[1]} = {resultado[0] + resultado[1]}")
else:
    print("No se encontraron primos P y Q tales que P + Q = M en el tiempo límite.")

print(f"Tiempo de ejecución: {end_time - start_time:.2f} segundos")

import time
import random
import sys
import concurrent.futures
from concurrent.futures import ThreadPoolExecutor

def miller_rabin(n, k=40):
    """Miller-Rabin primality test with k rounds."""
    if n < 2:
        return False
    if n == 2 or n == 3:
        return True
    if n % 2 == 0:
        return False
    
    d = n - 1
    s = 0
    while d % 2 == 0:
        d //= 2
        s += 1
    
    for _ in range(k):
        a = random.randrange(2, min(n-2, sys.maxsize))
        x = pow(a, d, n)
        if x == 1 or x == n - 1:
            continue
        for _ in range(s - 1):
            x = (x * x) % n
            if x == n - 1:
                break
        else:
            return False
    return True

def encontrar_pq_optimo_boundary(M, timeout=1200, max_checks=100000000):
    """Find primes P and Q such that P + Q = M (four threads, storing primes)."""
    if M % 2 != 0 or M <= 2:
        raise ValueError("M must be even and greater than 2")
    
    mid = M // 2
    checks_counter = [0]
    primes_found = []  # Shared list to store primes
    start_time = time.time()
    
    def search_mid_down():
        p = mid - (1 if mid % 2 == 0 else 0)
        while checks_counter[0] < max_checks:
            checks_counter[0] += 1
            if p < 2:
                return None
            if miller_rabin(p):
                q = M - p
                primes_found.append(p)
                if q > p and miller_rabin(q):
                    print(f"Found by mid_down (direct): P={p}, Q={q} after {time.time() - start_time:.2f}s")
                    return (p, q)
                # Check against all stored primes
                for prime in primes_found:
                    if prime != p and prime + p == M:
                        print(f"Found by mid_down (cross-check): P={min(prime, p)}, Q={max(prime, p)} after {time.time() - start_time:.2f}s")
                        return (min(prime, p), max(prime, p))
            p -= 2
        return None
    
    def search_mid_up():
        p = mid + (1 if mid % 2 == 0 else 0)
        while checks_counter[0] < max_checks:
            checks_counter[0] += 1
            if p >= M:
                return None
            if miller_rabin(p):
                q = M - p
                primes_found.append(p)
                if q > 0 and q != p and miller_rabin(q):
                    print(f"Found by mid_up (direct): P={q}, Q={p} after {time.time() - start_time:.2f}s")
                    return (q, p)
                for prime in primes_found:
                    if prime != p and prime + p == M:
                        print(f"Found by mid_up (cross-check): P={min(prime, p)}, Q={max(prime, p)} after {time.time() - start_time:.2f}s")
                        return (min(prime, p), max(prime, p))
            p += 2
        return None
    
    def search_from_max():
        p = M - 1
        while checks_counter[0] < max_checks:
            checks_counter[0] += 1
            if p < 2:
                return None
            if miller_rabin(p):
                q = M - p
                primes_found.append(p)
                if q > 0 and q != p and miller_rabin(q):
                    print(f"Found by max (direct): P={q}, Q={p} after {time.time() - start_time:.2f}s")
                    return (q, p)
                for prime in primes_found:
                    if prime != p and prime + p == M:
                        print(f"Found by max (cross-check): P={min(prime, p)}, Q={max(prime, p)} after {time.time() - start_time:.2f}s")
                        return (min(prime, p), max(prime, p))
            p -= 2
        return None
    
    def search_from_min():
        p = 2
        first = True
        while checks_counter[0] < max_checks:
            checks_counter[0] += 1
            if p >= M:
                return None
            if miller_rabin(p):
                q = M - p
                primes_found.append(p)
                if q > p and miller_rabin(q):
                    print(f"Found by min (direct): P={p}, Q={q} after {time.time() - start_time:.2f}s")
                    return (p, q)
                for prime in primes_found:
                    if prime != p and prime + p == M:
                        print(f"Found by min (cross-check): P={min(prime, p)}, Q={max(prime, p)} after {time.time() - start_time:.2f}s")
                        return (min(prime, p), max(prime, p))
            if first:
                p = 3
                first = False
            else:
                p += 2
        return None
    
    with ThreadPoolExecutor(max_workers=4) as executor:
        futures = [
            executor.submit(search_mid_down),
            executor.submit(search_mid_up),
            executor.submit(search_from_max),
            executor.submit(search_from_min)
        ]
        
        while time.time() - start_time < timeout:
            done, not_done = concurrent.futures.wait(
                futures,
                timeout=1.0,
                return_when=concurrent.futures.FIRST_COMPLETED
            )
            for future in done:
                result = future.result()
                if result:
                    for f in not_done:
                        f.cancel()
                    return result, checks_counter[0]
            if not not_done:
                break
    
    return None, checks_counter[0]

# Test with 10^1000
M = 10**1000
print(f"Procesando M = {M:,}")

start_time = time.time()
resultado, checks = encontrar_pq_optimo_boundary(M, timeout=1200, max_checks=100000000)
end_time = time.time()

if resultado is not None:
    p, q = resultado
    print(f"Encontrado: P = {p:,}, Q = {q:,}")
    print(f"Verificación: {p} + {q} = {p + q:,}")
    print(f"Números revisados: {checks:,}")
else:
    print("No se encontraron primos P y Q tales que P + Q = M en el tiempo límite.")
    print(f"Números revisados: {checks:,}")

print(f"Tiempo de ejecución: {end_time - start_time:.2f} segundos")
